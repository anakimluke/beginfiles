TMUX_CONFIG="~/.config/tmux/.tmux.conf"

# TMUX Related Aliases
alias                                 \
  tn="tmux -u -f $TMUX_CONFIG new"    \
  ta="tmux -u -f $TMUX_CONFIG attach" \
  tt="nvim $TMUX_CONFIG"

alias aa="nvim ~/.aws/credentials"

alias shada="nvim ~/.local/share/nvim/shada/main.shada"
alias content="~/.config/dotfiles/workstations/content"
alias bwork="~/.config/dotfiles/workstations/betty"
